	function toggleText(ev, name) {
		// console.log(name);
		
		ev.preventDefault();
		
		$textEl = $('#' + name + '_text')
		// console.log($textEl)

	  $textEl.toggle(); 

	  $expandEl = $('#' + name + '_expand');
	  $expandEl.text(($expandEl.text() == '[+]') ? '[-]' : '[+]');		
	}

	$('#rules_link').click(function(ev) { 
		toggleText(ev, 'rules');
	});

	$('#usage_link').click(function(ev) { 
		toggleText(ev, 'usage');
	});

	$('#credit_link').click(function(ev) { 
		toggleText(ev, 'credit');
	});
